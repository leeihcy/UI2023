<?xml version="1.0" encoding="utf-8" ?>
<skin>
  <layout>
    <Window id="control" width="500" height="500" back.render.type="color" back.render.color="white" >
      <Panel id="render_text_panel">
        <prop key="layout" left="0" right="0" top="0" height="300"/>
        <Label id="title" text="文本测试" layer="0" layer.needclear="true">
           <prop key="layout" left="0" right="0" top="0" height="100"/>
           <prop key="text.render" color="grey" align="center|vcenter"/>
           <prop key="text.render.font" size="36" weight="bold"/>
        </Label>

        <Label text="长文本显示不下时0123456780ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz,./;'~!@#$%^*()_+" 
          layout.left="0"  layout.top="120" width="200" height="20"/>
        <Label text="居中对齐文本" 
          layout.left="0"  layout.top="150" width="400" height="20" text.render.align="right"/>
      </Panel>
      <Panel padding="10">
        <prop key="layout" type="horz" gap="10" left="0" right="0" top="300" height="400"/>
        <Button id="btn_1" text="普通按钮" class="button button_theme_default"/>
        <Button id="btn_2" text="主要按钮" class="button button_theme_primary"/>
      </Panel>
    </Window>
  </layout>
</skin>