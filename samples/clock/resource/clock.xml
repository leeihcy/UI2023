<?xml version="1.0" encoding="utf-8" ?>
<skin>
  <layout>
    <Window id="clock">
      <Panel id="panel_clock" width="600" height="600" back.render.type="color" back.render.color="white">
        <Svg file="clock.svg" back.render.type="color" back.render.colorx="blue"/>
        
        <Controlx zorder="1" id="hour" style="hand" 
          layout.width="10" layout.height="100"/>
        <Controlx zorder="2" id="min"  style="hand" back.render.image="clock_min" 
          layout.width="5" layout.height="200"/>
        <Controlx zorder="3" id="sec"  style="hand" back.render.image="clock_sec" 
          back.render.color="red" layout.width="10" layout.height="100"/> 
          
      </Panel>
    </Window>
  </layout>
  <style>
    <class id='hand' transparent="1" layer="1" layout.left="285" layout.topx="0"
      back.render.type="color" back.render.color="black" 
    />
  </style>
</skin>