<?xml version="1.0" encoding="utf-8" ?>
<skin>
  <layout>
    <Window id="clock" width="660" height="660" back.render.type="color" back.render.color="gray" >
      <RoundPanel id="panel_clock" width="600" height="600" corner="80" fore.render.type="color" fore.render.color="white" 
        layout.left="30" layout.top="30" border-radius="50%">
          <Svg file="clock.svg" layout.left="20" layout.top="20" layout.right="20" layout.bottom="20"/>
          
          <Control zorder="1" id="hour" style="hand" back.render.image="clock_hour"/>
          <Control zorder="2" id="min"  style="hand" back.render.image="clock_min"/>
          <Control zorder="3" id="sec" style="hand" back.render.image="clock_sec"/> 
      </RoundPanel>
    </Window>
  </layout>
  <style>
    <class id='hand' transparent="1" layer="1" layout.left="285" layout.top="0"
      back.render.type="image"  
    />
  </style>
</skin>