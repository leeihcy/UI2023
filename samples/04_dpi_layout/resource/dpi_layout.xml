<?xml version="1.0" encoding="utf-8" ?>
<skin>
  <layout>
    <Window id="dpi_layout" width="500" height="500" back.render.type="color" back.render.color="white" >
      <Panel id="render_text_panel">
        <prop key="layout" left="0" right="0" top="0" bottom="0"/>
        <Label id="title" text="文本测试" layer="0" layer.needclear="true">
           <prop key="layout" left="0" right="0" top="0" height="100"/>
           <prop key="text.render" color="red" align="center|vcenter"/>
           <prop key="text.render.font" size="36" weight="bold"/>
        </Label>

        <Label text="0123456780ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz,./;'~!@#$%^*()_+" 
          layout.left="0"  layout.top="120" width="200" height="20"/>
        <Label text="好好学习，天天向上！" 
          layout.left="0"  layout.top="150" width="400" height="20" text.render.align="right"/>
      </Panel>
    </Window>
  </layout>
</skin>